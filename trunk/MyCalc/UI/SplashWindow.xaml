<Window x:Class="MyCalc.UI.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Splash" Height="100" Width="600" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" >
    <DockPanel>
        <DockPanel.Background>
            <RadialGradientBrush>
                <GradientStop Color="#FFE4E4E4"/>
                <GradientStop Color="#FFF0F0F0" Offset="1"/>
            </RadialGradientBrush>
        </DockPanel.Background>
        <Label Content="{Binding Message}" FontSize="14" Margin="5"/>
    </DockPanel>
</Window>

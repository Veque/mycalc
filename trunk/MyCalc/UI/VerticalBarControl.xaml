<UserControl x:Class="MyCalc.UI.VerticalBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical" FlowDirection="RightToLeft" VerticalAlignment="Bottom" Margin="3,0">
        <Label Content="{Binding Title}"  HorizontalAlignment="Center" FontSize="18" HorizontalContentAlignment="Right" RenderTransformOrigin="0.5,0.5" >
            <Label.LayoutTransform>
                <TransformGroup>
                    <RotateTransform Angle="90"/>
                </TransformGroup>
            </Label.LayoutTransform>
        </Label>
        <Grid>
            <Border Background="{Binding Color}" Height="{Binding CalculatedHeight}" VerticalAlignment="Bottom" Width="{Binding CalculatedWidth}"/>
            <TextBlock Text="{Binding PercentLabel}"  FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" />
        </Grid>
    </StackPanel>
</UserControl>
